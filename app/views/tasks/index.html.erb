<h1 style="text-align: center; margin-top: 50px;"> My Tasks </h1>
<ul style="list-style-type:none; padding: 10px; text-align: center; font-size: 24px;">

<% @tasks.each do |task| %>
  <li> 
  <% if task.completed %>
    <i class="far fa-check-square"></i>
  <%else%>
    <i class="far fa-square"></i>
  <%end%>
   <%= link_to task.title, task_path(task) %> 

  <%= link_to task_path(task), method: :delete do %> 
    <i class="fas fa-trash-alt"></i>
  <%end%>
  <br>
  </li>
<% end %>
<br>

<p><%= link_to "Create New Task", new_task_path, class: 'btn btn-warning' %></p>
</ul>
